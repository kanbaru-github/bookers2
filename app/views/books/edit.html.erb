<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

      <%= form_with model:@book, local:true do |f| %>
      <h1>Editing Book</h1>
      <div class="form-group">
        <lavel for="book_title">Title</lavel><br>
        <%= f.text_field :title, placeholder:"タイトル" %><br>
      </div>
      <div class="form-group">
        <lavel for="book_opinion">Opinion</lavel><br>
        <%= f.text_field :body, placeholder:"感想" %><br>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class: 'btn btn-success' %>
      </div>
      <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>