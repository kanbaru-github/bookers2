
<% book.post_comments.each do |post_comment| %>
  <!--複数データがあるため１つずつデータを取り出せる-->
  <% post_comment_user = post_comment.user %>
  <tr>
    <td>
      <%= link_to user_path(post_comment.user) do %>
        <%= attachment_image_tag post_comment_user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
        <%= post_comment_user.name %>
      <% end %>
    </td>
    <td><%= post_comment.comment %></td>
    <% if post_comment_user == current_user %>
    <td>
      <%= link_to 'Destroy', book_post_comment_path(post_comment.book_id, post_comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %>
    </td>
    <% end %>
  </tr>
  <% end %>
